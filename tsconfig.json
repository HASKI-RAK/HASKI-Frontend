{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext", "ES2022"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "skipDefaultLibCheck": true,
    "paths": {
      "@pages": ["src/pages"],
      "@services": ["src/services"],
      "@core": ["src/core"],
      "@store": ["src/store"],
      "@components": ["src/components"],
      "@utils": ["src/common/utils"],
      "@common/components": ["src/common/components"],
      "@common/theme": ["src/common/theme"],
      "@common/icons": ["src/common/icons"],
      "@common/hooks": ["src/common/hooks"],
      "@shared": ["src/shared"],
      "@mocks": ["__mocks__"],
      "jest.setup": ["jest.setup.ts"]
    },
    "outDir": "./dist"
  },
  "include": ["src", "__mocks__", "src/custom.d.ts", "jest.setup.ts", "src/services/xAPI/xAPI.d.ts", "vite.config.ts"]
}
