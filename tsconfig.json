{
  "include": ["src", "__mocks__", "src/custom.d.ts", "jest.setup.ts"],
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "inlineSourceMap": true,
    "paths": {
      "@pages": ["src/pages"],
      "@services": ["src/common/services"],
      "@utils": ["src/common/utils"],
      "@core": ["src/common/core"],
      "@store": ["src/common/store"],
      "@components": ["src/components"],
      "@common/components": ["src/common/components"],
      "@common/styles": ["src/common/styles"],
      "@common/colors": ["src/common/colors"],
      "@common/icons": ["src/common/icons"],
      "@common/hooks": ["src/common/hooks"],
      "@shared": ["src/shared"]
    },
    "outDir": "./bin"
  },
  "typedocOptions": {
    "entryPoints": ["src/*"],
    "out": "docs"
  }
}
